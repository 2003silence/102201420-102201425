@font-face {
  font-family: "Regular";
  font-weight: 400;
  src: url("//at.alicdn.com/wf/webfont/mxblSXarYhDN/rwdARZAvio3A.woff2") format("woff2"),
  url("//at.alicdn.com/wf/webfont/mxblSXarYhDN/6i1ZOKYOqOAv.woff") format("woff");
  font-display: swap;
}
.content {
  position: absolute; /* 绝对定位以覆盖在图片上 */
  display: flex;
  flex-direction: column; /* 垂直排列子元素 */
  top: 50%;
  left: 30%;
  transform: translate(1%, -50%); /* 居中对齐 */
  font-family: 'Regular', sans-serif; /* 设置字体 */
  font-style: italic;
  font-size: 60px;
  color: rgb(255, 120, 80); /* 设置文本颜色 */
  text-align: center; /* 文本居中 */
}
.container {
  background-color: #f58383;
}
.background-image {
  position:absolute;
  background-color: #f8dede;
  width: 200%;
  height: 100%; /* 使图片填满整个容器 */
  opacity: 0.8; /* 设置透明度，范围从 0（完全透明）到 1（完全不透明） */
}
.footer {
  position: absolute;
  bottom: 0%;
  display: flex;
  align-items: center; /* 垂直居中内容 */
  justify-content: space-between; /* 平均分配按钮之间的空间 */
  width: 100%; /* 根据需要设置宽度 */
  background-color: rgb(248, 235, 237); 
  border: 1px solid rgb(67, 127, 187); /* 边框颜色和宽度 */
  text-align: center;
  padding: 10px 0;
}

.bottom-button {
  background-color: transparent; /* 背景透明 */
  border: 1px solid rgb(33, 154, 187); /* 边框颜色和宽度 */
  color: rgb(33, 154, 187); /* 字体颜色 */
  padding: 10px 5px;
  border-radius: 5px; /* 圆角 */
  cursor: pointer; /* 鼠标指针样式 */
  font-size: 10px; /* 字体大小 */
  margin: 1px; /* 按钮间的间距 */
}