.container {
  position: absolute; /* 使用绝对定位 */
  padding: 5px; /* 内边距 */
  background-color: #f5f5f5; /* 背景色 */
}


.form-group {
  text-align: left; /* 输入框文本靠左 */
  margin-bottom: 20px;
}
.input-field {
  width: 170%; /* 输入框宽度 */
  padding: 10px; /* 内边距 */
  margin: 10px 0; /* 外边距 */
  border: 1px solid #ccc; /* 边框 */
  border-radius: 5px; /* 圆角 */
}

.submit-btn {
  left: 40%;
  background-color: #007aff;
  color: white;
  padding: 15px;
  border: none;
  border-radius: 5px;
  text-align: center;
}