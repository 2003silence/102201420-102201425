<view class="container">
  <input class="input-field" placeholder="请输入账号" value="{{username}}" bindinput="onUsernameInput"/>

  <input class="input-field" placeholder="请输入旧密码" value="{{oldPassword}}" bindinput="onOldPasswordInput" password="true"/>

  <input class="input-field" placeholder="请输入新密码" value="{{newPassword}}" bindinput="onNewPasswordInput" password="true"/>

  <input class="input-field" placeholder="请确认新密码" value="{{confirmPassword}}" bindinput="onConfirmPasswordInput" password="true"/>

  <view class="button-container">
    <button bindtap="updatePassword" class="update-button">更新信息</button>
  </view>
</view>